<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PhotoBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/pp_padding_small6</item>
        <item name="android:background">@drawable/pp_btn_bg_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/pp_padding_normal_high</item>
        <item name="android:paddingRight">@dimen/pp_padding_normal_high</item>
        <item name="android:textColor">@color/pp_colorWhite</item>
        <item name="android:textSize">@dimen/pp_font_size_small</item>
    </style>

</resources>
